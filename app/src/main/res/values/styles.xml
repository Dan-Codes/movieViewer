<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat">
        <item name="android:background">#E64A19</item>
        <item name="colorPrimary">#FF5722</item>
        <item name="colorPrimaryDark">#E64A19</item>
<!--        <item name="primary">#FFCCBC</item>-->
        <item name="colorAccent">#FF9800</item>
        <item name="android:textColorPrimary">#212121</item>
<!--        <color name="secondary_text">#757575</color>-->
<!--        <color name="">#FFFFFF</color>-->
        <item name="android:divider">#BDBDBD</item>
    </style>

    <style name="textstyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="lightBlue">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/roboto_mono_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">.5dp</item>
        <item name="android:button">@style/lightBlue</item>
    </style>

    <style name="TextBox">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/roboto_mono_medium</item>
    </style>

</resources>
